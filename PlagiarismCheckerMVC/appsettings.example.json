{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=your_database;Username=your_username;Password=your_password;"
  },
  "JwtSettings": {
    "SecurityKey": "YourSecureKeyForJwtAtLeast32Chars",
    "Issuer": "PlagiarismCheckerMVC",
    "Audience": "PlagiarismCheckerMVCUsers",
    "ExpirationMinutes": 60
  },
  "GoogleCloudStorage": {
    "BucketName": "your-bucket-name"
  },
  "GoogleCloud": {
    "CredentialsPath": "credentials/google-service-account.json"
  },
  "SearchEngineSettings": {
    "Google": {
      "ApiKey": "YOUR_GOOGLE_API_KEY",
      "SearchEngineId": "YOUR_SEARCH_ENGINE_ID",
      "ResultsCount": 10
    },
    "Yandex": {
      "ApiKey": "YOUR_YANDEX_API_KEY",
      "SearchEngineId": "YOUR_YANDEX_SEARCH_ID",
      "ResultsCount": 10
    },
    "OpenAI": {
      "ApiKey": "YOUR_OPENAI_API_KEY"
    }
  },
  "ParagraphSettings": {
    "MinSentences": 2,
    "MinCharacters": 150,
    "MinSentenceCharacters": 50
  }
}